@model IEnumerable<MovieApplication.Models.movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class= "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            <label>Title</label>
        </th>
        <th>
