@model IEnumerable<MovieApplication.Models.Rental>

@{
    ViewBag.Title = "Rented Movies";
}

<h2>Rented Movies</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            <label>Date of Rent</label>
        </th>
        <th>
            <label>First Name</label>
        </th>
        <th>
            <label>Last Name</label>
        </th>
        <th>
            <label>Phone</label>
        </th>
        <th>
            <label>Title</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateRented)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RentalID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RentalID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RentalID })
        </td>
    </tr>
}

</table>
