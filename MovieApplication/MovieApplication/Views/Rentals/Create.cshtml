@model MovieApplication.Models.Rental

@{
    ViewBag.Title = "Create New Rental";
}

<h2>Create New Rental</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div >
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Customer</label>
            <div class="col-md-10">
                @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                <br/>
            </div>
        </div>
        
        

        <div class="form-group">
            <label class="control-label col-md-2">Movie</label>
            <div class="col-md-10">
                @Html.DropDownList("MovieID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MovieID, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Date of Rent</label>
            <div class="col-md-10">
                
                @Html.EditorFor(model => model.DateRented, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateRented, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>
       

        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn  btn-primary" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
                <br />
            </div>
        </div>
    </div>
}

    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
